@model AltTab.Models.PasswordChange
@{
    ViewBag.Title = "ChangePasswords";
}

<div class="container">
    <br />
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Şifre Güncelle</li>
            </ol>
        </nav>
        <div class="col-md-8">
            <!--Makale Listesi-->
            <div class="image-thumbnail">
                <br />
                @using (Html.BeginForm("ChangePasswords", "Account", FormMethod.Post, new { @class = "row" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Mevcut Şifreniz</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Yeni Şifreniz</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Şifreyi Doğrulayın</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.ConfirmNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                        <div class="row mb-3" style="text-align:center">
                            <label class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-outline-primary col-8"><i class="bi bi-pencil"></i> Şifre Güncelle</button>
                            </div>
                        </div>
                }

            </div>
        </div>
        <div class="col-md-4">
            <!--Kategori Listesi-->
            @Html.Action("KategoriListesi", "Category")
            <br />
            @Html.Action("MostRead", "Home")
        </div>
    </div>
</div>
