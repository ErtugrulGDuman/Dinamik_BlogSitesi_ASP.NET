@model AltTab.Models.ProfilGuncelle
@{
    ViewBag.Title = "Profil";
}

<div class="container">
    <br />
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Profil İşlemleri</li>
            </ol>
        </nav>
        <div class="col-md-8">
            <!--Makale Listesi-->
            <div class="image-thumbnail">
                <br />
                @using (Html.BeginForm("Profil", "Account", FormMethod.Post, new { @class = "row" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Soyadı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Mail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Mail, "", new { @class = "text-danger" })
                        </div>
                        <div class="row mb-3" style="text-align:center">
                            <label class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-outline-primary col-6"><i class="bi bi-pencil"></i> Güncelle</button>
                            </div>
                        </div>
                        <a href="/Views/Account/ChangePasswords.cshtml"> Şifre Güncelle</a>
                    </div>
                }

            </div>
        </div>
        <div class="col-md-4">
            <!--Kategori Listesi-->
            @Html.Action("KategoriListesi", "Category")
            <br />
            @Html.Action("MostRead", "Home")
        </div>
    </div>
</div>
