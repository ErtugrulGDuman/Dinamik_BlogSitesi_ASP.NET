@model IEnumerable<AltTab.Models.Makale>
@{
    ViewBag.Title = "MakaleListesi";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-8">
            <!--Makale Listesi-->
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Uyarı! </strong>Bu Kategoride Makale Yok.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @foreach (var item in Model)
            {
                <div class="card-group">
                    <div class="card">
                        <img src="/Content/images/@item.Image" class="card-img-top" alt="..." height="300">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            @if (item.Description.Length > 60)
                            {
                                <p class="card-text">@item.Description.Substring(0, 60) :(...)</p>
                            }
                            else
                            {
                                <p class="card-text">@item.Description</p>
                            }
                            <a href="/Home/Detay/@item.Id" class="btn btn-primary">Devamını oku...</a>
                        </div>
                        <div class="card-footer">
                            <small class="text-body-secondary"><i class="bi bi-calendar3" style="font-size:20px"></i> @item.ReleaseDate.ToString("dd-mm-yyyy") - <i class="bi bi-eye" style="font-size:20px"></i> @item.Views Görüntülenme - <i class="bi bi-chat-square-text" style="font-size:20px"></i> Yorum </small>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
        <div class="col-md-4">
            <!--Kategori Listesi-->
            @Html.Action("KategoriListesi", "Category")
            <br />
            @Html.Action("MostRead", "Home")
        </div>
    </div>
</div>
